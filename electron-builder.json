{
  "appId": "com.akankha.pizzapos",
  "productName": "Pizza POS",
  "copyright": "Copyright Â© 2024-2025 Akankha. All rights reserved.",
  "directories": {
    "output": "dist"
  },
  "files": ["electron/**/*", "client/dist/**/*"],
  "win": {
    "target": ["nsis"],
    "icon": "client/public/pizza-icon.ico",
    "signingHashAlgorithms": ["sha256"],
    "sign": null,
    "publisherName": "Akankha"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "client/public/pizza-icon.ico",
    "uninstallerIcon": "client/public/pizza-icon.ico",
    "shortcutName": "Pizza POS",
    "displayLanguageSelector": false,
    "installerHeader": "client/public/pizza-icon.ico",
    "installerHeaderIcon": "client/public/pizza-icon.ico"
  },
  "forceCodeSigning": false
}
