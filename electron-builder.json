{
  "appId": "com.pizzashop.pos",
  "productName": "Pizza POS",
  "directories": {
    "output": "dist"
  },
  "files": ["electron/**/*", "client/dist/**/*"],
  "win": {
    "target": ["nsis"],
    "icon": "client/public/pizza-icon.ico",
    "signingHashAlgorithms": ["sha256"],
    "sign": null
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "client/public/pizza-icon.ico",
    "uninstallerIcon": "client/public/pizza-icon.ico"
  },
  "forceCodeSigning": false
}
